# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件都使用
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript 和 JavaScript 文件
[*.{ts,js,vue}]
indent_style = space
indent_size = 2

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
